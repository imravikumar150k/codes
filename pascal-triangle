#include <iostream>

using namespace std;

int main()
{
    int n;
    cin>>n;
    int a[n][n]={0};
//    vector<int> a;
    for(int i=0;i<n;i++)
    {

for(int j=0;j<i+1;j++)
    {
        if(j==0 ||j==i) a[i][j]=1;
        else{

                    a[i][j]=a[i-1][j-1]+a[i-1][j];
           }
    }
    }
    for(int i=0;i<n;i++)
    {
        for(int k=n-i;k>0;k--) cout<<" ";
        for(int j=0;j<i+1;j++)
        {
        cout<<a[i][j]<<" ";
        }
        cout<<endl;
     }
}
